@model FoodListViewModel

@{
    ViewData["Title"] = "Главная";
}

<div class="text-center">
    <h1 class="display-4 text-light">Меню</h1>
</div>



<div class="d-flex flex-column align-items-center">
    @if (Context.Session.Keys.Contains(SessionKeys.OrderNotFound))
    {
        <div class="alert alert-warning mt-3" role="alert">
            Заказ по запросу не найден.
        </div>
        Context.Session.Remove(SessionKeys.OrderNotFound);
    }
    @if (Model.FoodList.Count() != 0)
    {
        @foreach (var food in Model.FoodList)
        {
            <partial name="_FoodCardPartial" model="food" />
        }
    }
    else
    {
        <h3 class="h3 text-light">Товары выбранной категории не найдены</h3>
    }
</div>
