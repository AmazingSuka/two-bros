@model IEnumerable<StateLookupModel>

@{ 
    ViewData["Title"] = "Состояния заказов";
}

<div class="text-center mb-3">
    <h1 class="display-4 text-light">Состояния заказов</h1>
</div>

<div class="col-12 col-sm-10 col-md-8 ml-auto mr-auto">
    <button id="order-state-create" class="btn btn-secondary d-flex mb-3 ml-auto" onclick="createOrderState()">Создать состояние</button>

    <table id="order-state-table" class="table table-hover table-striped">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Состояние заказа</th>
            <th scope="col">Операции</th>
        </tr>
        @foreach (var state in Model)
        {
            <tr id="order-state-row-@state.Id">
                <td scope="row" id="order-state-primary-@state.Id">@state.Id</td>
                <td id="order-state-@state.Id">@state.State</td>
                <td id="order-state-control-@state.Id" class="operations">
                    <button id="update-button-@state.Id" class="btn btn-warning mr-2" onclick="updateOrderState(@state.Id)">Редактировать</button>
                    <button id="delete-button-@state.Id" class="btn btn-danger" onclick="deleteOrderState(@state.Id)">Удалить</button>
                </td>
            </tr>
        }
    </table>
</div>