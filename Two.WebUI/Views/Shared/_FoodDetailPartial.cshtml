@model FoodDetailModel

<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content border-0">
            <!-- Card -->
            <div class="card bg-second text-light border-0">
                <!-- Card content -->
                <div class="card-body">
                    <!-- Title -->
                    <div class="card-title">
                        <div class="d-flex align-items-center justify-content-between">
                            <h4 class="h4 m-0">@Model.Name</h4>
                            <p class="h2 m-0"><span class="h5">₽</span>@Model.Price</p>
                        </div>
                        <p class="font-small">@Model.Weight g / @Model.Size cm</p>
                    </div>
                    <!-- Price & Category -->
                    <!-- Description -->
                    <p class="card-text mb-3">@Model.Description</p>
                    <!-- Detai Information -->
                    <table class="table table-sm table-hover">
                        <tr>
                            <th> На 100г. продукта: </th>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Калории</td>
                            <td>@Model.Calories</td>
                        </tr>
                        <tr>
                            <td>Белки</td>
                            <td>@Model.Protein</td>
                        </tr>
                        <tr>
                            <td>Жиры</td>
                            <td>@Model.Fats</td>
                        </tr>
                        <tr>
                            <td>Углеводы</td>
                            <td>@Model.Carbohydrates</td>
                        </tr>
                    </table>
                    <!-- Detai Information -->
                </div>
                <!-- Card content -->
                @if (User.IsInRole(Roles.Administrator))
                {
                    <!-- Admin`s buttons -->
                    <div class="card-footer">
                        <ul class="list-inline d-flex">

                            <!-- Edit Button-->
                            <li class="list-inline-item mr-2 ml-auto">
                                <a class="btn btn-warning" asp-action="Update" asp-controller="Food" asp-route-foodId="@Model.Id">Изменить</a>
                            </li>

                            <!-- Delete Button-->
                            <li class="list-inline-item">
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Food" asp-route-foodId="@Model.Id">Удалить</a>
                            </li>
                        </ul>
                    </div>
                    <!-- Admin`s buttons -->
                }
            </div>
            <!-- Card -->
        </div>
    </div>
</div>
