@model CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="text-center mb-3">
    <h1 class="display-4 text-light">Оформление заказа</h1>
</div>

<form asp-action="Create" method="post" class="col-10 col-md-8 col-lg-6 col-xl-4 form-container form-submit-r ml-auto mr-auto">
    <div class="form-group">
        <label asp-for="@Model.lookupModel.ClientName">ФИО</label>
        <input asp-for="@Model.lookupModel.ClientName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.lookupModel.PhoneNumber">Номер телефона</label>
        <input type="tel" asp-for="@Model.lookupModel.PhoneNumber" placeholder="8-XXX-XXX-XX-XX" required pattern="8-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.lookupModel.Address">Адрес</label>
        <input asp-for="@Model.lookupModel.Address" class="form-control" required />
    </div>

    <input type="submit" value="Оформить заказ" class="btn btn-success ml-auto d-flex" />
</form>
