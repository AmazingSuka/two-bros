@model OrderLookupModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="text-center mb-4">
    <h1 class="display-4 text-light">Информация о заказе</h1>
</div>

<div class="col-10 col-sm-8 col-lg-6 ml-auto mr-auto">
    <div class="list-group mb-4 customer-info">
        <a class="list-group-item text-center list-group-item-action">Информация о заказчике</a>
        <div class="list-group-item list-group-item-action list-group-horizontal d-flex">
            <a class="w-50">Номер заказа</a>
            <a class="w-50">@Model.Id</a>
        </div>
        <div class="list-group-item list-group-item-action list-group-horizontal d-flex">
            <a class="w-50">ФИО</a>
            <a class="w-50">@Model.ClientName</a>
        </div>
        <div class="list-group-item list-group-item-action list-group-horizontal d-flex">
            <a class="w-50">Адрес доставки</a>
            <a class="w-50">@Model.Address</a>
        </div>
        <div class="list-group-item list-group-item-action list-group-horizontal d-flex">
            <a class="w-50">Номер телефона</a>
            <a class="w-50">@Model.PhoneNumber</a>
        </div>
        <div class="list-group-item list-group-item-action list-group-horizontal d-flex">
            <a class="w-50">Состояние</a>
            <a class="w-50">@Model.OrderState.State</a>
        </div>
    </div>
</div>

<div class="text-center mb-4">
    <h3 class="h3 font-weight-normal text-light">Содержимое заказа</h3>
</div>

<div class="col-10 col-sm-8 col-lg-6 ml-auto mr-auto">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Название</th>
            <th>Количество</th>
        </tr>
        @foreach (var item in Model.OrderedItems)
        {
            <tr>
                <td>@item.FoodName</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </table>
</div>
